<%= link_to_remote 'aaa', :controller => 'code_review', :action => 'new', :id=>@project %>
<% javascript_tag do %>
  var addReviewUrl = '<%= url_for :controller => 'code_review', :action => 'new', :id=>@project %>';
  //var remote_function = new function() {
    // <%= remote_function :update => 'comment-form', :url => {:controller => 'code_review', :action => 'new', :id=>@project}, :class => "icon icon-edit", :title => l(:label_comment_add) %>;
